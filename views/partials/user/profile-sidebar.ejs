<style>
  
/* Sidebar styles */
.sidebar {
  width: 250px;
  margin-top: 5%;
  padding-top: 50px;
  background-color: #a3beda;
  color: #000000;
  padding-top: 60px;
  height: 100vh;
  position: fixed;
  top: 0;
  left: 0;
  transition: transform 0.3s ease-in-out;
  z-index: 1000; /* Sidebar should be above footer */
}

.sidebar a {
  color: #000000;
  padding: 10px 15px;
  display: block;
  text-decoration: none;
  font-size: 16px;
}

.sidebar a:hover {
  background-color: #7397be;
}

.sidebar a i {
  margin-right: 10px;
}
a.logo{
    text-decoration: none;
    
  }
button.btn.toggle-sidebar-btn{
    border: 1px solid #a28383;

}
.toggle-sidebar-btn {
  display: none;
  position: relative;
  top: 0px;
  left: 10px;
  z-index: 2000; /* Make sure the toggle button is above sidebar */
  color: #eea1a1;
  border: none;
  padding: 10px;
  font-size: 20px;
  cursor: pointer;
  background-color: #b9cbdc;
}
.sidebar a.active {
  background-color: #007bff; /* Blue background */
  color: white; /* White text */
  font-weight: bold;
}


@media (max-width: 768px) {
  .sidebar {
    transform: translateX(-250px);
  }

  .toggle-sidebar-btn {
    display: block;
  }

  .sidebar.show {
    transform: translateX(0);
  }
}

/* Footer styling */
footer {
  position: relative;
  bottom: 0;
  left: 0;
  width: 100%;
  background-color: #343a40;
  color: white;
  padding: 10px;
  text-align: center;
  z-index: 1000; /* Footer should be below the sidebar */
}
#dropdownMenuLink.btn{
  background-color: white;
    color: black;
    height: 43px;
    border: none;
}
</style>

