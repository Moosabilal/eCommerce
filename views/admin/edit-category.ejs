<%- include('../../views/partials/admin/header')%>

<div class="content">
    <h3>Update Category</h3>
    
    <!-- Update Category Form -->
    <form method="POST" action="/admin/editCategory/<%= category._id %>" onsubmit="return validateUpdateForm()">
      <div class="form-group">
        <label for="categoryName">Category Name</label>
        <input 
          type="text" 
          class="form-control" 
          name="categoryName" 
          placeholder="Enter updated category name" 
          value="<%= category.name %>"
        >
       
      </div>
      <div id="update-name-error" class="error-message text-danger"></div>
      
      <div class="form-group">
        <label for="categoryDescription">Description</label>
        <textarea 
          class="form-control" 
          name="description" 
          rows="3" 
          placeholder="Enter updated category description"
        ><%= category.description %></textarea>
        
      </div>
      <div id="update-description-error" class="error-message text-danger"></div>
      
      <button type="submit" class="btn btn-primary">Update Category</button>
    </form>
  </div>
  
  
  <%- include('../../views/partials/admin/footer')%>

  <script>
    <% if(error){ %>
        Swal.fire({
            icon:"error",
            title:"Oops",
            text:'<%= error %>',
        });
    <% } %>
  </script>